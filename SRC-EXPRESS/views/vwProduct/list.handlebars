
  {{#if this.empty}}
  <div class="card">
  <div class="card-header">
    Products
  </div>
    <div class="card-body">
    <p1 class="card-title">Không có dữ liệu</p1>
  </div>
  <div class="card-footer text-muted">
    Footer
  </div>
</div>
  {{else}}
    <div class="card">
    <div class="card-header">
        <h4>Products</h4>
    </div>
    
    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" class="text-center">CatID</th>
      <th scope="col">Products</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.products}}
    <tr>
      <th scope="row" class="text-center">{{ProID}}</th>
      <td>{{ProName}}</td>
      <td>{{Price}}</td>
      <td>{{Quantity}}</td>
      <td class="text-right">
          <a class="btn btn-danger btn-sm" href="javascripts:;" role="button">
              <i class="fa fa-trash" aria-hidden="true"></i>
          </a>
          <a class="btn btn-primary btn-sm" href="javascripts:;" role="button">
              <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>
  {{/if}}
  


